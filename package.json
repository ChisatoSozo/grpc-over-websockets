{
  "name": "grpc-over-websocket",
  "version": "0.0.8",
  "main": "dist/generate.js",
  "license": "MIT",
  "bin": {
    "grpc-over-websockets-gen": "node dist/generate.js"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "test": "npm-run-all test:*",
    "test:generate": "node dist/generate.js -o src/tests/protos/compiled.js src/tests/test.proto",
    "test:jest": "jest",
    "build": "rollup -c --bundleConfigAsCjs",
    "setup": "npm run build && node dist/generate.js -o examples/react-client/src/client-protos/compiled.js -o examples/server/server-protos/compiled.js examples/protos/example.proto",
    "publish": "npm run build && npm version patch && npm publish"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@types/prettier": "^2.7.1",
    "@types/yargs": "^17.0.11",
    "jest-environment-jsdom": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^3.2.5",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "jest": "^29.3.0"
  },
  "dependencies": {
    "typescript": "^4.8.4",
    "@types/ws": "^8.5.3",
    "protobufjs": "^7.0.0",
    "protobufjs-cli": "^1.0.0",
    "ws": "^8.8.1",
    "yargs": "^17.5.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  }
}
